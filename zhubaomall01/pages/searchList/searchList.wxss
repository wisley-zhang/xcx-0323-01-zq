	height: auto;
	display: flex;
	flex-direction: column;
}
.search{
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}
.img-search{
	width: 50rpx;
	height: 50rpx;
	display:flex;
}
.section{
	width: 50%;
	height: 50rpx;
	display: flex;
}
.searchs{
	width: 80%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
