/*列表标题*/
.list-top{
	width: 96%;
	height: auto;
	margin-left: 2%;
	margin-top: 2%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.list-top text{
	width: 80%;
}


.list-top .item.active{  
  color: #E93527;
  border-bottom: 1rpx solid #E93527;
  padding-bottom: 5rpx;
}
.list-title .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #E93527;  
}  

